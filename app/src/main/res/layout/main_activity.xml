<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:theme="@style/Theme.AppCompat.Light.NoActionBar"
        tools:context=".mainActivity">

    <ImageButton
            android:src="@drawable/threelines"
            android:layout_width="wrap_content"
            android:layout_height="293dp"
            android:id="@+id/imageButton"
            android:contentDescription="@string/menu_button"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="164dp" android:layout_marginStart="40dp"/>

    <TextView
            android:text="@string/place_your_phone_near_the_lock"
            android:layout_width="324dp"
            android:layout_height="wrap_content"
            android:id="@+id/textView"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="172dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="540dp"
            android:textSize="30sp"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textColor="@color/colorBlack"
            android:fontFamily="@font/CaviarDreams"
            app:layout_constraintHorizontal_bias="0.494" app:layout_constraintVertical_bias="0.0"/>
    <android.support.v7.widget.Toolbar
            android:id="@+id/my_toolbar"
            android:layout_width="match_parent"
            android:layout_height="73dp"
            android:background="?attr/colorPrimary"
            android:elevation="4dp"
            android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
            android:backgroundTint="@color/colorBlue"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:sen

    />
</android.support.constraint.ConstraintLayout>